<hr>
<section class="row">
  <h2>Sign Up for the Current Conditions App:</h2>
  <h4>Register now to find out what it's like at your spot</h4>

  {{#if message.length}}
    <p class="alert">{{message}}</p>
  {{/if}}
<div class="signup">
  <form action="{{req.user._id}}" method="POST" class="auth-form">
    <p class="input-field">
      <input type="email" name="email" placeholder="E-mail">
    </p>
    <p class="input-field">
      <input type="password" name="password" placeholder="Password">
    </p>
    <p class="input-field">
      <input type="submit" value="Sign Up" class="btn">
    </p>
  </form>
</div>
</section>
